<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <TextView
        android:id="@+id/ima1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Официант Андрей"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="30dp"
        />
    <TextView
        android:id="@+id/tex2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Кафе:"
        android:layout_below="@+id/ima1"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Молодежный день"
        android:textColor="#0091ee"
        android:layout_toRightOf="@+id/tex2"
        android:layout_below="@+id/ima1"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/tex3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выберете способ оплаты:"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tex2"
        android:layout_marginTop="20dp"
        android:textColor="#FF0000"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        />

    <ImageButton
        android:id="@+id/img1but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/card1"
        android:layout_below="@+id/tex3"
        android:layout_marginLeft="30dp"

        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/card2"
        android:layout_below="@+id/tex3"
        android:layout_toRightOf="@+id/img1but"
        android:layout_marginRight="30dp"

        />
    <ImageButton
        android:id="@+id/apbut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/gpay"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img1but"


        />

    <TextView
        android:id="@+id/tex4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/card2"
        android:layout_below="@+id/apbut"
        android:layout_centerHorizontal="true"
        android:text="Введите сумму чаевых"
        android:textSize="25dp"

        />
    <EditText
        android:id="@+id/edi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Сумма:"
        android:inputType="number"
        android:layout_below="@+id/tex4"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"


        />
    <Button
        android:id="@+id/oplata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:text="Оплатить"
        android:textColor="#ffffff"
        android:elevation="6dp"
        android:stateListAnimator="@null"
        android:translationZ="4dp"
        android:backgroundTint="#0091ee"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edi"
        />
</RelativeLayout>